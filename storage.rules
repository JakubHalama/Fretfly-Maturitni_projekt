rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Profilové obrázky - přihlášení uživatelé mohou nahrávat a číst
    match /profile_images/{fileName} {
      // Přihlášení uživatelé mohou nahrávat nové obrázky
      allow write: if request.auth != null;
      
      // Přihlášení uživatelé mohou číst profilové obrázky
      allow read: if request.auth != null;
    }
    
    // Všechny ostatní soubory - pouze přihlášení uživatelé
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}

