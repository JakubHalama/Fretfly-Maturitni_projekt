rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Kolekce chords - veřejně čitelná pro všechny, zápis pro přihlášené
    match /chords/{chordId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Uživatelské profily
    match /users/{userId} {
      // Čtení: všichni mohou číst profily
      allow read: if true;
      
      // Zápis: pouze vlastník může zapisovat (včetně transakcí)
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // Naučené akordy - pouze vlastník může číst a zapisovat
      match /learned_chords/{chordId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}

